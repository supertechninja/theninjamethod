<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_settings"
    app:startDestination="@+id/navigation_settings">

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.mcwilliams.settings.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings">

        <action
            android:id="@+id/navigate_to_strava_auth"
            app:destination="@+id/navigation_strava_auth" />

    </fragment>

    <fragment
        android:id="@+id/navigation_strava_auth"
        android:name="com.mcwilliams.settings.StravaWebAuthFragment"
        android:label="Sign into Strava"
        tools:layout="@layout/fragment_settings" />

</navigation>