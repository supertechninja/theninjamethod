<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="stravaWorkoutViewModel"
            type="com.mcwilliams.theninjamethod.ui.workouts.StravaWorkoutViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/stravaWorkoutTitle"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textAppearance="?attr/textAppearanceBody1"
            android:text="@{stravaWorkoutViewModel.stravaWorkout.workoutName}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/exercise_date"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textAppearance="?attr/textAppearanceBody1"
            android:text="@{stravaWorkoutViewModel.stravaWorkout.date}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/strava_distance"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:textAppearance="?attr/textAppearanceBody1"
            android:text="@{stravaWorkoutViewModel.stravaWorkout.stravaDistance}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/stravaWorkoutTitle" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/strava_time"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:textAppearance="?attr/textAppearanceBody1"
            android:text="@{stravaWorkoutViewModel.stravaWorkout.stravaTime}"
            app:layout_constraintStart_toEndOf="@id/strava_distance"
            app:layout_constraintTop_toBottomOf="@id/stravaWorkoutTitle" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>