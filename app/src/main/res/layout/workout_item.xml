<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="workoutViewModel"
            type="com.mcwilliams.theninjamethod.ui.workouts.combinedworkoutlist.WorkoutViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{() -> workoutViewModel.onWorkoutClicked()}"
        android:padding="16dp">

        <TextView
            android:id="@+id/exercise_title"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textAppearance="?attr/textAppearanceBody1"
            android:text="@{workoutViewModel.workout.workoutName}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/exercise_date"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textAppearance="?attr/textAppearanceBody1"
            android:text=""
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>