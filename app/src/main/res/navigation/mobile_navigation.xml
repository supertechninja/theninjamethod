<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_workouts">

    <fragment
        android:id="@+id/navigation_workouts"
        android:name="com.mcwilliams.theninjamethod.ui.workouts.ui.WorkoutsFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_workouts">

        <action android:id="@+id/navigate_to_workout_detail"
            app:destination="@+id/navigation_workout_detail"/>

        <action android:id="@+id/navigate_to_start_workout"
            app:destination="@+id/navigation_start_workout"/>
    </fragment>

    <fragment
        android:id="@+id/navigation_start_workout"
        android:name="com.mcwilliams.theninjamethod.ui.workouts.ui.StartWorkoutFragment"
        android:label="Start Workout"
        tools:layout="@layout/fragment_start_workout" />

    <fragment
        android:id="@+id/navigation_workout_detail"
        android:name="com.mcwilliams.theninjamethod.ui.workouts.ui.WorkoutDetailFragment"
        android:label="Workout Detail"
        tools:layout="@layout/workout_detail_fragment" />

    <fragment
        android:id="@+id/navigation_exercises"
        android:name="com.mcwilliams.theninjamethod.ui.exercises.ExercisesFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home">
    </fragment>

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.mcwilliams.theninjamethod.ui.settings.SettingsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_settings" />

</navigation>